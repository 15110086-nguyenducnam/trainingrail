<div class="container">
  <div class="user">
    <%= form_for @user, method: :put, html: {:multipart => true}  do |f| %>
      <div class="form-group">
        <%= f.hidden_field :user_id, value: current_user.id%>
        <%= f.label :email %><br />
        <%= f.text_field :email, autofocus: true, placeholder: "post content", class: "form-control", readonly: true %>
        <%= f.label :avatar %><br />
        <%= f.file_field :avatar, class: "form-control", placeholder:"Avatar" %>
      </div>
      <div class="actions">
        <%= f.submit "Update", class: "btn btn-primary" %>
        <%= link_to(users_path)  do %>
          <button type="button" class="btn btn-default">Back</button>
        <% end %>
      </div>
    <%end%>
  </div>  
</div>  